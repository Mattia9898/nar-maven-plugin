<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.github.maven-nar.its.nar</groupId>
    <artifactId>it-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../it-parent/pom.xml</relativePath>
  </parent>

  <artifactId>it0034-secondary-exec-opt</artifactId>
  <packaging>pom</packaging>
  <name>Secondary Execution Appended Options</name>
  <version>1.0-SNAPSHOT</version>  
  <description>
    Cpp Appended Option for Secondary Executions Does Not Correctly Append to Options in Primary Execution Options When Defined in Same Pom.xml
  </description>
  <url>http://maven.apache.org/</url>

  <properties>
    <skipTests>true</skipTests>
  </properties>
 
  <build>
    <defaultGoal>integration-test</defaultGoal>
    <plugins>
      <plugin>
        <groupId>@project.groupId@</groupId>
        <artifactId>nar-maven-plugin</artifactId>
        <extensions>true</extensions>
         <configuration>
           <libraries>
             <library>
               <type>executable</type>
             </library>
           </libraries>
           <cpp>
             <name>${nar.linker}</name>
             <includes>
               <include>**/*.cpp</include>
             </includes>
             <options>
               <option>-D_PARENT_FLAG=0</option>
             </options>
           </cpp>
         </configuration>
         <executions>
           <execution>
             <id>execution1</id>
             <phase>test</phase>
             <goals>
               <goal>nar-download</goal>
               <goal>nar-unpack</goal>
               <goal>nar-compile</goal>
               <goal>nar-test-unpack</goal>
               <goal>nar-testCompile</goal>
               <goal>nar-test</goal>
             </goals>
             <configuration>
               <aol>amd64-Linux-${nar.linker}-execution1</aol>
               <cpp>
                 <options children.combine="append">
                   <option>-D_EXECUTION_1_FLAG=1</option>
                 </options>
               </cpp>
             </configuration>
           </execution>
           <execution>
             <id>execution2</id>
             <phase>test</phase>
             <goals>
               <goal>nar-download</goal>
               <goal>nar-unpack</goal>
               <goal>nar-compile</goal>
               <goal>nar-test-unpack</goal>
               <goal>nar-testCompile</goal>
               <goal>nar-test</goal>
             </goals>
             <configuration>
               <aol>amd64-Linux-${nar.linker}-execution2</aol>
               <cpp>
                 <options children.combine="append">
                   <option>-D_EXECUTION_2_FLAG=2</option>
                 </options>
               </cpp>
             </configuration>
           </execution>
         </executions>
       </plugin>
     </plugins>
   </build>
  
  <modules>
    <module>it0034-secondary-exec-opt-hw</module>
  </modules>
  
</project>
